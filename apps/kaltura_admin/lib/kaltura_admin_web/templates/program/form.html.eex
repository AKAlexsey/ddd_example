<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :start_datetime, class: "control-label" %>
    <%= datetime_select f, :start_datetime, class: "form-control" %>
    <%= error_tag f, :start_datetime %>
  </div>

  <div class="form-group">
    <%= label f, :end_datetime, class: "control-label" %>
    <%= datetime_select f, :end_datetime, class: "form-control" %>
    <%= error_tag f, :end_datetime %>
  </div>

  <div class="form-group">
    <%= label f, :epg_id, class: "control-label" %>
    <%= text_input f, :epg_id, class: "form-control" %>
    <%= error_tag f, :epg_id %>
  </div>

  <div class="form-group">
    <%= label f, :linear_channel, class: "control-label" %>
    <%= select f, :linear_channel_id, linear_channels(), class: "form-control" %>
    <%= error_tag f, :linear_channel_id %>
  </div>

  <div class="form-group">
    <%= submit "save", class: "btn btn-primary" %>
  </div>
<% end %>
